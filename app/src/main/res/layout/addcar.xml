<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroundaddcar">


    <TextView
        android:id="@+id/azzazazaza"
        android:layout_width="332dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"


        android:text="add your car picture"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageCar"
        android:layout_width="163dp"
        android:layout_height="149dp"
        android:layout_above="@+id/azzazazaza"
        android:layout_alignParentTop="true"

        android:layout_marginTop="72dp"
        android:src="@drawable/car"
        app:civ_border_color="@color/black"
        app:civ_border_width="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText


        android:id="@+id/marque"
        android:layout_width="match_parent"

        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="24dp"
        android:hint="marque"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/azzazazaza" />

    <EditText
        android:id="@+id/model"
        android:layout_width="match_parent"
        android:layout_height="64dp"

        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:hint="Model"

        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marque" />

    <EditText
        android:id="@+id/descriptionCar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="12dp"
        android:hint="description"

        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/model" />

    <com.google.android.material.button.MaterialButton

        android:id="@+id/saveCar"


        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="80dp"

        android:background="#30ffffff"
        android:text="save"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionCar" />


</androidx.constraintlayout.widget.ConstraintLayout>